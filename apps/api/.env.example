# =============================================================================
# Environment Variables Template for API Deployment
# =============================================================================
# Copy this file to .env and fill in the values
# These values should also be configured in GitHub Secrets for CI/CD
# =============================================================================

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
NODE_ENV=production
PORT=3000
SERVICE_NAME=lolog-api
BASE_URL=https://api.lolog.site
FRONTEND_URL=https://lolog.site

# -----------------------------------------------------------------------------
# Session & Cookie
# -----------------------------------------------------------------------------
SESSION_COOKIE_NAME=lolog_session
SESSION_DURATION_DAYS=7
COOKIE_SECURE=true

# -----------------------------------------------------------------------------
# Database (NeonDB)
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# -----------------------------------------------------------------------------
# Google OAuth
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret


# -----------------------------------------------------------------------------
# Email (Resend)
# -----------------------------------------------------------------------------
EMAIL_DELIVERY_MODE=resend
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxx
RESEND_EMAIL=noreply@lolog.site

# -----------------------------------------------------------------------------
# Storage (Cloudflare R2)
# -----------------------------------------------------------------------------
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=your-bucket-name
R2_ENDPOINT=https://account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-public-url.r2.dev

# -----------------------------------------------------------------------------
# AI Services
# -----------------------------------------------------------------------------
GEMINI_API_KEY=your-gemini-api-key
GEMINI_CHAT_MODEL=gemini-1.5-flash
GEMINI_EMBEDDING_MODEL=text-embedding-004

OPENAI_API_KEY=your-openai-api-key
OPENAI_SESSION_MODEL=gpt-4o-mini
